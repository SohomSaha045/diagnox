generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Doctor {
  id              String  @id @default(auto()) @map("_id") @db.ObjectId
  placeId         String
  address         String
  category        String
  phone           String?
  googleUrl       String
  bizWebsite      String
  storeName       String
  ratingText      String
  stars           Float
  numberOfReviews Int
}

model Patient {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String
  diseases String[] @default([])
  doctors  String[] @default([])
}
